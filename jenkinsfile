pipeline {
    agent any

    parameters {
        choice(name: 'ENV', choices: ['dev', 'test', 'uat'], description: 'Select Environment')
        choice(name: 'ACTION', choices: ['plan', 'apply', 'destroy'], description: 'Terraform Action')
    }

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Set AWS Credentials') {
            steps {
                script {
                    def credsId = ""

                    if (params.ENV == "dev") {
                        credsId = "aws-creds-dev"
                    } else if (params.ENV == "test") {
                        credsId = "aws-creds-test"
                    } else if (params.ENV == "uat") {
                        credsId = "aws-creds-uat"
                    }

                    withCredentials([
                        usernamePassword(
                            credentialsId: credsId,
                            usernameVariable: 'AWS_ACCESS_KEY_ID',
                            passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                        )
                    ]) {
                        sh 'aws sts get-caller-identity'
                        sh 'terraform init'
                    }
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                script {
                    if (params.ACTION == 'destroy') {
                        sh "terraform plan -destroy -var-file=${params.ENV}.tfvars"
                    } else {
                        sh "terraform plan -var-file=${params.ENV}.tfvars"
                    }
                }
            }
        }

        stage('Approve UAT') {
            when {
                expression { params.ENV == 'uat' && params.ACTION == 'apply' }
            }
            steps {
                input message: "Approve ${params.ACTION} for UAT?", ok: "Proceed"
            }
        }

        stage('Terraform Apply/Destroy') {
            when {
                expression { params.ACTION != 'plan' }
            }
            steps {
                sh "terraform ${params.ACTION} -auto-approve -var-file=${params.ENV}.tfvars"
            }
        }
    }
}
